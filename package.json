{
  "name": "pluto-koi-backend",
  "version": "1.0.0",
  "description": "Backend Service for Pluto Koi Website",
  "type": "module",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:wishlist": "NODE_OPTIONS=--experimental-vm-modules jest --testPathPatterns=wishlist",
    "dev": "tsx --watch --env-file .env src/main.ts",
    "start": "node dist/main.js",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [],
  "author": "Zulfajri",
  "license": "MIT",
  "dependencies": {
    "@types/multer": "^2.0.0",
    "@types/socket.io": "^3.0.1",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.2",
    "multer": "^2.0.2",
    "socket.io": "^4.8.1",
    "uuid": "^13.0.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@shelf/jest-mongodb": "^5.2.2",
    "@tsconfig/node22": "^22.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^24.5.1",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.35.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.2.3",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  }
}
