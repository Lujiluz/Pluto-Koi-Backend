# Server Configuration
PORT=3000
API_PREFIX=/api
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/pluto-koi

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
